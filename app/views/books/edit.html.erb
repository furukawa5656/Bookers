

<div class="edit-body">
	<h1 class="edit-h1">Editing Book</h1>


	<% if @book.errors.any? %>
		<h3><%= @book.errors.count %> error</h3>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<%= message %>
			<% end %>
		</ul>
    <% end %>
	<%= form_for(@book) do |f| %>
		<div class="form">
			<div class="edit-form">
				<label class="edit-label" for="index-form-title">Title</label>
				<%= f.text_field :title %>
			</div>
			<div class="edit-form">
				<label class="edit-label" for="index-form-body">Body</label>
				<%= f.text_area :body %>
			</div>
			<%= f.submit 'Update Book', class: "update-block" %>
			<%= link_to "Show", book_path(@book.id) %>
			<%= link_to "Back", books_path %>
		</div>
	<% end %>

</div>